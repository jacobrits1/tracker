<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgFileExplorer"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginLeft="5dip" >
    </ImageView>

    <TextView
        android:id="@+id/txtFileExplorerName"
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/imgFileExplorer"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip">
    </TextView>

    <TextView
        android:id="@+id/txtFileExplorerData"
        android:text="Data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgFileExplorer"
        android:layout_below="@+id/txtFileExplorerName"
        android:layout_marginLeft="10dip">
    </TextView>

    <TextView
        android:id="@+id/txtFileExplorerDate"
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFileExplorerName"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="10dip">
    </TextView>

</RelativeLayout>